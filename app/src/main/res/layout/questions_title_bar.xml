<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/question_page_titlebar"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#CEFA9836"
    android:gravity="center"
    android:orientation="horizontal">
    <!--android:background="@drawable/questiontitlebar"-->


    <ImageButton
        android:id="@+id/bspeak"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/speak" />

    <TextView
        android:id="@+id/tv_questions_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_catego"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/bstop_mute"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/stopmute"
        android:textAllCaps="true" />

</LinearLayout>